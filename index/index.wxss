.intro {
  margin: 30px;
  text-align: center;
}
page{
  height:100%;
}
.root {
  width: 100%;
   height: 100%;
   background-color: #70c7da;
   position: relative;
}

.background-image{
  height : 100%;
   position: absolute;
   width: 100%;
   left: 0px;
   top: 0px;
}
.content{
   position: absolute;
   width: 100%;
   height: 100%;
   left: 0px;
   top: 0px;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  background-color:rgba(0, 0, 0, .2);
  z-index: 2;
}
.eject{
  display: flex;
  position: fixed;
  width: 80%;
  height: 25%;
  left: 10%;
  top: 25%;

  background-color:rgba(255, 255, 255, 0.986);
  justify-content:center;
  align-items: center;
  z-index: 3;
}